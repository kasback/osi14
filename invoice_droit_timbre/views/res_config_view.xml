<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tax_droit_timbre_config_settings_form" model="ir.ui.view">
            <field name="name">taxe.timbre.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr=".//div[@id='invoicing_settings']" position="inside">

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="taux_droit_timbre" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Taux droit de timbre" for="taux_droit_timbre"/>
                            <!--<div class="text-muted">-->
                                 <!--Taux droit de timbre-->
                            <!--</div>-->
                        </div>
                    </div>
                </xpath>


            </field>
        </record>


    </data>
</odoo>
